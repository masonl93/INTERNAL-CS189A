<body>
<section>
  <link href="https://netdna.bootstrapcdn.com/font-awesome/4.1.0/fonts/fontawesome-webfont.eot?v=4.1.0" rel="stylesheet">
  
  <div id="mezzoCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div class="fill">
        <%= link_to image_tag("foster.png", alt: "foster") %>
      </div>
      <div class="carousel-caption bb">
          <div class="row">
            <div class="col-md-7 osw">
              <h1 class="a">Fast.</h1>
              <ul class="feature-list list-unstyled">
                <li><span class="glyphicon glyphicon-music"></span></i> Quickly connecting local musicians. </li>
              </ul>
            <div class="col-md-5">
              
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="item">
      <div class="fill">
        <%= link_to image_tag("prljmflbnd.png", alt: "band") %>
      </div>
      <div class="carousel-caption">
          <div class="row">
            <div class="col-md-7 osw">
              <h1 class="a">Efficient.</h1>
              <ul class="feature-list list-unstyled">
                <li><span class="glyphicon glyphicon-music"></span></i> Mezzo is a dedicated platform. </li>
              </ul>
            <div class="col-md-5">
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="item">
      <div class="fill">
        <%= link_to image_tag("eddie.png", alt: "band") %>
      </div>
      <div class="carousel-caption">
          <div class="row">
            <div class="col-md-7 osw">
              <h1 class="a">Secure.</h1>
              <ul class="feature-list list-unstyled">
                <li><span class="glyphicon glyphicon-music"></span></i> Mezzo requires authenticity. </li>
              </ul>
            <div class="col-md-5">
              
            </div>
          </div>
        </div>
    </div>
  </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#mezzoCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#mezzoCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  </div>
</section>

<section class="blocks">
  <div class="container">
    <div class="row">
      <div class="col-md-2 osw">
        <i class="fa fa-facebook-square fa-5x fa-border"></i>
        <h2 class="aa">Log-in is easy.</h2>
        <p>Connect with an existing Facebook account.</p>
      </div>
      <div class="col-md-2 osw">
        <i class="fa fa-users fa-5x fa-border"></i>
        <h2 class="aa">Find what you want.</h2>
        <p>Specify what you play and who you're looking to play with.</p>
      </div>
      <div class="col-md-4 osw">
        <%= link_to image_tag("mezzo_transparent2.png") %>
      </div>
      <div class="col-md-2 osw">
        <i class="fa fa-weixin fa-5x fa-border"></i>
        <h2 class="aa">Chat instantly.</h2>
        <p>Start conversations with those you've matched with.</p>
      </div>
      <div class="col-md-2 osw">
        <i class="fa fa-youtube fa-5x fa-border"></i>
        <h2 class="aa">Upload your songs.</h2>
        <p>Make your profile yours with playable YouTube videos.</p>
      </div>
    </div>
  </div>
</section>
