
<legend>Survey Page 1</legend>

<%= form_tag({controller: "users", action: "updateSurvey"}, method: "post") do %>

  <div.text-center class="form-group">
    <label class="col-md-4 control-label" for="textinput">Instruments:</label>
    <div class="col-md-4">
      <div class="checkbox">
        <label for="checkbox-0">
          <%= check_box_tag :instrument, 'Guitar' %> Guitar
        </label>
      </div>

    <div class="radio">
      <label for="radios-1">
        <%= check_box_tag :instrument, 'Bass' %> Bass
      </label>
    </div>

    <div class="radio">
      <label for="radios-2">
        <%= check_box_tag :instrument, 'Drums' %> Drums
      </label>
     </div>
    <div class="radio">
      <label for="radios-3">
        <%= check_box_tag :instrument, 'Vocals' %> Vocals
      </label>
    </div>
    <div class="radio">
      <label for="radios-4">
        <%= check_box_tag :instrument, 'Producer' %> Producer
      </label>
    </div>

    </div>
  </div>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="Experience">Experience:</label>
    <div class="col-md-4">
      <div class="radio">
      <label><%= radio_button_tag :exp, '1' %> 1</label>
    </div>
    <div class="radio">
      <label><%= radio_button_tag :exp, '2' %>2</label>
    </div>
    <div class="radio disabled">
      <label><%= radio_button_tag :exp, '3' %>3</label>
    </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="genre">Genre:</label>
    <div class="col-md-4">
      <div class="form-group">
        <label class="checkbox-inline"><%= check_box_tag :genre, 'Rock' %> Rock</label>
        <label class="checkbox-inline"><%= check_box_tag :genre, 'Rap' %> Rap</label>
        <label class="checkbox-inline"><%= check_box_tag :genre, 'EDM' %> EDM</label>
        <label class="checkbox-inline"><%= check_box_tag :genre, 'Country' %> Country</label>
      </select>
    </div>
    </div>
  </div>

  <%= label_tag(:influence, "Influence:") %>
  <%= text_field_tag(:influence) %>

  <%= label_tag(:url, "Url:") %>
  <%= text_field_tag(:url) %>

  <%= label_tag(:provider, "Provider:") %>
  <%= text_field_tag(:provider) %>

  <%= label_tag(:bio, "Bio:") %>
  <%= text_area_tag(:bio) %>

  <%= submit_tag("Submit") %>
<% end %>








</div>
