
<button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#myModal">New</button><br><br>
<%#= link_to 'New', new_chat_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myModal'}  %>
<div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
      <div class="hidden-xs">Messages</div>
    </button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-music" aria-hidden="true"></span>
      <div class="hidden-xs">Group</div>
    </button>
  </div>
</div>

<div class="well">
  <div class="tab-content">
    <div class="tab-pane fade in active" id="tab1">
      <% @singleids.each do |id| %>
          <% user = User.find(id) %>
          <div class="media">
            <div class="media-left">
              <a href="#">
                <img class="media-object" src="<%= user.image %>" alt="...">
              </a>
            </div>
            <div class="media-body">

              <h4 class="media-heading"><%= link_to user.name, user_path(user.id) %></h4>
              <%= link_to "MESSAGES", user_match_msg_path(user.id) %>
            </div>
          </div>
      <% end %>
    </div>
    <div class="tab-pane fade in" id="tab2">
      <% @groupids.each do |ids| %>
          <% group = User.find(ids) %>
          <div class="media">
            <div class="media-left">
              <a href="#">
                <img class="media-object" src="<%= group[0].image %>" alt="...">
              </a>
            </div>
            <div class="media-body">
              <h4 class="media-heading">
                <%= group[0].name%>
                <% len = group.length - 1 %>
                <% for i in 1..len %>
                    <% unless  group[i].id == current_user.id%>
                        <%=", " + group[i].name%>
                    <% end %>
                <% end %>

                <!--VERRRYYY IMPORTANTTT!-->
                <%# @group.push(current_user).sort_by { |user| user[:id]}%>
                <% group.sort_by { |user| user[:id]}%>
                <%groupid = group[0].id.to_s%>
                <% len = group.length - 1 %>
                <% for i in 1..len %>
                    <%groupid = groupid + "," + group[i].id.to_s%>
                <% end %>
                <%#= groupid %>
              </h4>
              <%= link_to "MESSAGES", group_msgs_path(groupid) %>
            </div>
          </div>

      <% end %>
    </div>
  </div>
</div>








